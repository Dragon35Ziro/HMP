<Window x:Class="StudentAttendanceApp.Attendance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="История посещаемости" 
        Height="400" 
        Width="600">
    <Grid>
        <DataGrid ItemsSource="{Binding Student.AttendanceRecords}" 
                AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" 
                                  Binding="{Binding Date, StringFormat='dd.MM.yyyy'}"/>
                <DataGridTextColumn Header="Посещено пар" 
                                  Binding="{Binding AttendanceMarks.Count}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
